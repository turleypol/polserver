use uo;
use os;
use util;

program SorcCocoon_control( cocoon )

  while ( cocoon )

    // if( !( ReadGameClock()%7 ) )
    DecaySorcCocoonHP( cocoon );
    // endif
    Sleep( 1 );
  endwhile

  return 1;
endprogram

function DecaySorcCocoonHP( byref cocoon )

  if ( cocoon.hp > 0 )
    cocoon.hp -= 1;
    if ( cocoon.hp > cocoon.maxhp )
      cocoon.hp := cocoon.maxhp;
    endif
  // Print( "Decaying SorcCocoon: "+cocoon.hp );
  else
    DestroyItem( cocoon );
  endif
endfunction

