        if ( CheckLosAt( thevortex, newx, newy, newz ) )
          thevortex.movable := 1;
          MoveObjectToLocation( thevortex, newx, newy, newz, thevortex.realm,
                                MOVEOBJECT_FORCELOCATION );
          thevortex.movable := 0;
        endif
      endif
    endforeach
