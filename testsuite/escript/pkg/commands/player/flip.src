      0x835:  targetfurniture.graphic := 0x834;
      0x85D:  targetfurniture.graphic := 0x85E; // Wooden Fence
      0x85E:  targetfurniture.graphic := 0x85D;
      0x860:  targetfurniture.graphic := 0x861; // Wooden Fence
      0x861:  targetfurniture.graphic := 0x860;
      0x21DC: targetfurniture.graphic := 0x21DA; // Wooden Wall
      0x21DA: targetfurniture.graphic := 0x21DC;
      0xB01:  targetfurniture.graphic := 0xB07; // Large Display Case middle
      0xB07:  targetfurniture.graphic := 0xB01;
      0xB08:  targetfurniture.graphic := 0xB00; // Large Display Case end
      0xB00:  targetfurniture.graphic := 0xB06;
      0xB06:  targetfurniture.graphic := 0xB02;
      0xB02:  targetfurniture.graphic := 0xB08;
      0xB05:  targetfurniture.graphic := 0xAFD; // Large Display Case Top (end)
      0xAFD:  targetfurniture.graphic := 0xB03;
      0xB03:  targetfurniture.graphic := 0xAFF;
      0xAFF:  targetfurniture.graphic := 0xB05;
      0xAFE:
        targetfurniture.graphic := 0xB04; // Large Display Case Top (middle)
      0xB04:  targetfurniture.graphic := 0xAFE;
      0xB09:  targetfurniture.graphic := 0xB0A; // Small Display Case
      0xB0A:  targetfurniture.graphic := 0xB09;
      0xB0B:  targetfurniture.graphic := 0xB0C; // Small Display Case Top
      0xB0C:  targetfurniture.graphic := 0xB0B;
      0x190E: targetfurniture.graphic := 0x190F; // Bar Door
      0x190F: targetfurniture.graphic := 0x190E;
      0x1913: targetfurniture.graphic := 0x1912; // Bar Corner
      0x1912: targetfurniture.graphic := 0x1910;
      0x1910: targetfurniture.graphic := 0x1911;
