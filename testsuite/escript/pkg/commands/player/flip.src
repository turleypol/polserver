      0x0B40: targetfurniture.graphic := 0x0B3F; // Large Counter (w/ legs)
      0x0B3F: targetfurniture.graphic := 0x0B40;
      0x0B3E: targetfurniture.graphic := 0x0B3D; // Large Counter (w/o legs)
      0x0B3D: targetfurniture.graphic := 0x0B3E;
      0x0B34: targetfurniture.graphic := 0x0B36; // Small Counter (w/ legs)
      0x0B36: targetfurniture.graphic := 0x0B34;
      0x0B4A: targetfurniture.graphic := 0x0B4C; // Writing Desk
      0x0B4C: targetfurniture.graphic := 0x0B4B;
      0x0B4B: targetfurniture.graphic := 0x0B49;
      0x0B49: targetfurniture.graphic := 0x0B4A;
      0xb53:  targetfurniture.graphic := 0xb55; // Poor chair
      0xb55:  targetfurniture.graphic := 0xb54;
      0xb54:  targetfurniture.graphic := 0xb52;
      0xb52:  targetfurniture.graphic := 0xb53;
      0x3b4:  targetfurniture.graphic := 0x3b5; // Wooden Fence
      0x3b5:  targetfurniture.graphic := 0x3b4;

      // Statues
      0x1224: // Statue
        targetfurniture.graphic := 0x139A;
      0x139A: targetfurniture.graphic := 0x1224;
      0x1226: // Winged female
        targetfurniture.graphic := 0x139B;
      0x139B: targetfurniture.graphic := 0x1226;
      0x1227: // Stronh man
        targetfurniture.graphic := 0x139C;
      0x139C: targetfurniture.graphic := 0x1227;
      0x1228: // Eagle
        targetfurniture.graphic := 0x139D;
      0x139D: targetfurniture.graphic := 0x1228;

      0x14F3: // Ship model
        targetfurniture.graphic := 0x14F4;
      0x14F4: targetfurniture.graphic := 0x14F3;
      default: SendSysMessage( who, "That item cannot be reoriented." );
    endcase
  endwhile

endprogram
