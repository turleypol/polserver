
use uo;
include ":attributes:attributes";

program textcmd_showstats( who )
  SendSysMessage( who, "Select a mobile" );

  var mobile := Target( who );
  if ( mobile )
    PrintTextAbovePrivate( mobile, "Str: " + AP_GetStat( mobile, STRENGTH ),
                           who );
    PrintTextAbovePrivate( mobile, "Dex: " + AP_GetStat( mobile, DEXTERITY ),
                           who );
    PrintTextAbovePrivate( mobile,
                           "Int: " + AP_GetStat( mobile, INTELLIGENCE ), who );
  endif
endprogram
