function setVirtueHues( who )

  valorAmount := 0;
  honorAmount := 0;
  compassionAmount := 0;
  justiceAmount := 0;
  honestyAmount := 0;
  spiritualityAmount := 0;
  sacrificeAmount := 0;
  humilityAmount := 0;

  valorHue := 0;
  honorHue := 0;
  compassionHue := 0;
  justiceHue := 0;
  honestyHue := 0;
  spiritualityHue := 0;
  sacrificeHue := 0;
  humilityHue := 0;

  getVirtueValues( who );

  if ( ( valorAmount >= 1 ) && ( valorAmount <= 1000 ) )
    valorHue := 234;
  elseif ( ( valorAmount >= 1001 ) && ( valorAmount <= 2000 ) )
    valorHue := 2117;
  elseif ( ( valorAmount >= 2001 ) && ( valorAmount <= 3000 ) )
    valorHue := 32;
  endif

