use uo;
use os;

include ":attributes:attributes";
include ":damage:damage";

program TimedScript_endCastingFocusBoost( params )
  var mobile := params[1];
  var points := CInt( GetObjProperty( mobile, "FishMeleeDmgBoost" ) );
  points := -1 * points;
  SetObjProperty( mobile, "CastingFocusIncrease",
                  CInt( GetObjProperty( mobile, "CastingFocusIncrease" ) )
                - points );
  EraseObjProperty( mobile, "FishCastingFocusBoost" );

  return 1;
endprogram
