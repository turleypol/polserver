use uo;
use os;

include ":attributes:attributes";
include ":damage:damage";
include ":timedScripts:timedScripts";

program TimedScript_hitPointRegenBoost( params )
  var mobile := params[1];
  var points := params[3];
  params := 0;

  // Prevents more than one fish pie mod from running on a character.
  var timers := TS_GetTimerNames( mobile );
  foreach timer in timers
    if ( timer[1, 4] == "Fish" )
      Run_Script( ":timedScripts/subScripts/fishpies/end" + timer, { mobile } );
      break;
    endif
  endforeach
  AP_SetVitalRegenRateMod( mobile, "Hits",
                           AP_GetVitalRegenRateMod( mobile, "Hits" ) + points );
  SetObjProperty( mobile, "FishHitPointRegenBoost", points );
  // This is not yet implemented.

  return 1;
endprogram
