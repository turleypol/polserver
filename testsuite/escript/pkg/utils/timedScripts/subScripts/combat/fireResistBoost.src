use uo;
use os;

include ":attributes:attributes";
include ":damage:damage";

program TimedScript_fireResistBoost( params )
  var mobile := params[1];
  var points := params[3];
  params := 0;

  // Prevents mod from being applied twice.
  // Uses the same as Magery Agility, to keep them from stacking.
  if ( GetObjProperty( mobile, "FireResistBoost" ) )
    return 0;
  endif
  SetObjProperty( mobile, "FireResistBoost", points );
  ModifyResistance( mobile, DMG_FIRE, points );

  return 1;
endprogram
