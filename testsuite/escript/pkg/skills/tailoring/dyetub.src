program use_dyetub( character, dyetub )
  if ( dyetub.color == 1 )
    dyetub.color := 1109;
  endif

  if ( GetObjProperty( dyetub, "fixedcolor" ) )
    if ( !character.cmdlevel && GetAttribute( character, TAILORING ) < 70 &&
         dyetub.color > 52 )
      SendSysMessage( character, "You are unable to make a decent color." );
      return;
    else
      DyeItems( character, dyetub );
      return;
    endif
  endif

  var i;
  var textline;
  var maxcolor := 52;
  var firstrow := 20;
  var secondrow := 40;
  var newcolor := 0;
  var res := SendDialogGump( character, layout, data );
  var basecolor := res[0];

  if ( !basecolor )
    SendSysMessage( character, "Canceled." );
    return;
  elseif ( basecolor == 1101 )
    maxcolor := 47;
  elseif ( basecolor == 2000 )
    maxcolor := 18;
    firstrow := 18;
    secondrow := 18;

  // the ugly colors option
  elseif ( basecolor == 1 )
    basecolor := 1;

  // the current color option
  elseif ( basecolor == 2 )
    if ( !character.cmdlevel && GetAttribute( character, TAILORING ) < 70 &&
         dyetub.color > 52 )
      SendSysMessage( character, "You're unable to make a decent color." );
      return;
    else
      DyeItems( character, dyetub );
      return;
    endif

  // set the dyetub color permanently
  elseif ( basecolor == 3 )
    SendSysMessage( character, "The tub is now permanently this color!" );
    SetObjProperty( dyetub, "fixedcolor", 1 );
    return;
  endif

  // display the second level of the menu
  if ( !character.cmdlevel && GetAttribute( character, TAILORING ) < 70 )
    SendSysMessage( character, "You are unable make a decent color." );
    basecolor := 1;
  endif

  for ( i := 1; i <= firstrow; i := i + 1 )
    textline := "button 20 " + CStr( 65 + ( 20 * i ) ) + " 2104 2103 1 0 " + CStr(
                                     basecolor + i );
    layout2[CInt( len( layout2 ) + 1 )] := textline;
  endfor
  for ( i := 21; i <= secondrow; i := i + 1 )
    textline := "button 100 " + CStr( 65 + ( 20 * ( i - 20 ) ) ) + " 2104 2103 1 0 " + CStr(
                                      basecolor + i );
    layout2[CInt( len( layout2 ) + 1 )] := textline;
  endfor
  for ( i := 41; i <= maxcolor; i := i + 1 )
    textline := "button 180 " + CStr( 65 + ( 20 * ( i - 40 ) ) ) + " 2104 2103 1 0 " + CStr(
                                      basecolor + i );
    layout2[CInt( len( layout2 ) + 1 )] := textline;
  endfor

  basecolor := basecolor - 1;
  for ( i := 1; i <= firstrow; i := i + 1 )
    textline := "text 40 " + CStr( 60 + ( 20 * i ) ) + " " + CStr( basecolor + i )
                                   + " " + CStr( i );
    layout2[CInt( len( layout2 ) + 1 )] := textline;
  endfor
  for ( i := 21; i <= secondrow; i := i + 1 )
    textline := "text 120 " + CStr( 60 + ( 20 * ( i - 20 ) ) ) + " " + CStr( basecolor + i )
                                    + " " + CStr( i );
    layout2[CInt( len( layout2 ) + 1 )] := textline;
  endfor
  for ( i := 41; i <= maxcolor; i := i + 1 )
    textline := "text 200 " + CStr( 60 + ( 20 * ( i - 40 ) ) ) + " " + CStr( basecolor + i )
                                    + " " + CStr( i );
    layout2[CInt( len( layout2 ) + 1 )] := textline;
  endfor

  layout2[len( layout2 ) + 1] := "button 220 440 2119 2120 1 0 0";
  res := SendDialogGump( character, layout2, data2 );
  newcolor := res[0];
  if ( !newcolor )
    SendSysMessage( character, "Canceled." );
    return;
  else
    dyetub.color := newcolor;
  endif

  DyeItems( character, dyetub );

endprogram

///////////////////
//  does the actual dying of items
///////////////////

function DyeItems( character, dyetub )

  SendSysMessage( character, "Dye What?" );
  var what := Target( character, TGTOPT_NOCHECK_LOS );
  if ( !what )
    SendSysMessage( character, "Canceled." );
    return;
  endif

  if ( !CanReachItem( character, what ) )
    SendSysMessage( character, "You can't reach that!" );
    return;
  endif

  if ( !IsDyableItem( character, what ) )
    SendSysMessage( character, "You can't dye that!" );
    return;
  endif

  if ( IsContainer( what ) && ( what != character.backpack ) )
    foreach item in EnumerateItemsInContainer( what, ENUMERATE_ROOT_ONLY )
      if ( IsDyableItem( character, item ) )
        item.color := dyetub.color;
        PlaySoundEffect( character, 0x023f );
        sleep( 2 );
      else
        SendSysMessage( character, "Can't dye " + item.desc );
      endif
    endforeach
  endif

  what.color := dyetub.color;
  PlaySoundEffect( character, 0x023f );

endfunction

///////////////////
//  determines if the character can reach the item they're trying to dye
///////////////////

function CanReachItem( character, item )
  if ( character.cmdlevel )
    return 1;
  endif
  if ( InInventory( character.backpack, item ) )
    return 1;
  endif
  if ( item == character.backpack )
    return 1;
  endif

  if ( Distance( character, item ) > 2 )
    return 0;
  endif

  // banners
  if ( item.objtype >= 0x1586 && item.objtype <= 0x15f5 )
    return 1;
  elseif ( item.objtype >= 0x160f && item.objtype <= 0x1633 )
    return 1;
  endif

  return 0;
endfunction

///////////////////
//  Determines if the item passed is dyable
///////////////////

function IsDyableItem( character, item )
  if ( character.cmdlevel )
    return 1;
  endif

  if ( item.objtype >= UOBJ_BOLT_START && item.objtype <= UOBJ_BOLT_END )
    return 1;
  elseif ( item.objtype >= UOBJ_CLOTH_START && item.objtype <= UOBJ_CLOTH_END )
    return 1;
  endif

  // banners
  if ( item.objtype >= 0x1586 && item.objtype <= 0x15f5 )
    return 1;
  elseif ( item.objtype >= 0x160f && item.objtype <= 0x1633 )
    return 1;
  endif

  var cloth_items_cfg_file := ReadConfigFile( "cloth_items" );
  if ( FindConfigElem( cloth_items_cfg_file, item.graphic ) )
    return 1;
  endif

  case ( item.objtype )
    UOBJ_BACKPACK:
    UOBJ_BAG:
    UOBJ_RECALL_RUNE:
    UOBJ_RUNEBOOK:
    UOBJ_SANDALS:
    UOBJ_SHOES:
    UOBJ_BOOTS:
    UOBJ_THIGH_BOOTS:
    0x1b74: // kite shield
    0x1b75: // kite shield
    0x09b5: // eggs
    0x204e: // death shroud
    0x0df2: // wand
    0x0df3: // wand
    0x0df4: // wand
    0x0df5: // wand
      return 1;
  endcase

  // pillows
  if ( item.objtype >= 0x13a4 && item.objtype <= 0x13ae )
    return 1;
  endif

  // curtains
  if ( item.objtype == 0x12db )
    return 1;
  endif

  return 0;

endfunction
