exported function GetMaterialAmount( item )

  var tailoring_cfg := ReadConfigFile( ":tailoring:tailoring" );
  var clothing_elem := FindConfigElem( tailoring_cfg, item.objtype );
  return GetConfigInt( clothing_elem, "Material" );

endfunction

