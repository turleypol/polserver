use uo;
use os;

program fireplace( character, fireplace )
  if ( character )
  endif
  case ( fireplace.objtype )
    // Sandstone fireplace (large piece) East lit
    0x0475:
      var other_piece := ListItemsNearLocationOfType( fireplace.x, fireplace.y - 1,
                                                      fireplace.z, 0, 0x0489,
                                                      fireplace.realm )[1];
      if ( !other_piece )
        return;
      endif
      // If not lit then light it.
      if ( fireplace.graphic != fireplace.objtype )
        fireplace.graphic := fireplace.objtype;
        fireplace.facing := 29;
        other_piece.graphic := other_piece.objtype;
        PlaySoundEffect( fireplace, 0x226 );
      // If lit extinguish it.
      else
        fireplace.graphic := 0x045d;
        other_piece.graphic := 0x045e;
      endif
