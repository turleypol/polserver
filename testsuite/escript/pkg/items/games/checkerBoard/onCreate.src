use uo;
use os;

program OnCreate( board )

  var i;
  var pieces := array;
  for ( i := 1; i <= 12; i += 1 )
    pieces.Append( CreateItemInContainer( board, "WhiteChecker" ) );
    pieces.Append( CreateItemInContainer( board, "RedChecker" ) );
    SleepMS( 5 );
  endfor

  foreach piece in ( pieces )
    SetObjProperty( piece, "boardserial", board.serial );
    SleepMS( 5 );
  endforeach

  return 1;
endprogram
