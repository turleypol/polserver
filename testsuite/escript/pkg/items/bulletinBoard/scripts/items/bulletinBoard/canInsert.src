use uo;
use os;

program BB_canInsert( mobile, bulletin_board, movetype, inserttype, adding_item,
                      existing_stack, amount_to_add )
  bulletin_board := bulletin_board;
  inserttype := inserttype;
  existing_stack := existing_stack;
  amount_to_add := amount_to_add;

  if ( movetype == MOVETYPE_PLAYER )
    if ( !adding_item.IsMessageBoardNote() )
      SendSysMessage( mobile, "You can not add that to the bulletin board.",
                      0x3, 0x22 );
      return 0;
    endif
  endif

  return 1;
endprogram
