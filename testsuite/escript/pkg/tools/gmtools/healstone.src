use uo;
use os;
include ":attributes:attributes";

program healstone( item )
  while ( item )
    foreach critter in ListMobilesNearLocation( item.x, item.y, item.z, 5,
                                                item.realm )
      AP_SetVital( critter, VITALID_LIFE, critter.strength );
    endforeach
    sleep( 60 );
  endwhile
endprogram
